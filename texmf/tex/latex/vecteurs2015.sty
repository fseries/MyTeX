\newcommand{\vect}[9]{
	\coordinate(#1) at (#3,#4);
	\coordinate(#2) at (#5,#6);
	\draw (#1) -- (#2) node [fill=white,midway,above,sloped] {$\textcolor{#9}{\overrightarrow{#1#2}}$};
	\draw (#1) node [fill=white,#7] {#1};
	\draw (#2) node [fill=white,#8] {#2};
	\draw [->,>=latex,line width=3pt] (#1) -- (#2);
}

\newcommand{\vecthelp}[9]{
	\coordinate(#1) at (#3,#4);
	\coordinate(#2) at (#5,#6);
	\draw (#1) -- (#2) node [#9,fill=white,midway,above,sloped] {$\overrightarrow{#1#2}$};
	\draw (#1) node [fill=white,#7] {#1};
	\draw (#2) node [fill=white,#8] {#2};
	\draw [red,line width=3pt] (#1) -- (#5,#4) -- (#2);
	\draw (#1) node {$\bullet$};
	\draw (#2) node {$\bullet$};
	\draw [->,>=latex,line width=5pt] (#1) -- (#2);
}

